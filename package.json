{
  "name": "guideline-aware-ai-agent",
  "version": "1.0.0",
  "description": "AI agent that dynamically incorporates behavioral guidelines from Supabase",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "start": "node dist/index.js",
    "setup": "ts-node scripts/setup-database.ts",
    "setup:rls": "ts-node scripts/setup-rls.ts",
    "init:products": "ts-node scripts/init-products.ts",
    "demo:products": "ts-node scripts/demo-product-refactoring.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts --max-warnings=50",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs:openapi": "node -e \"const yaml = require('js-yaml'); const fs = require('fs'); const doc = yaml.load(fs.readFileSync('openapi.yaml', 'utf8')); fs.writeFileSync('openapi.json', JSON.stringify(doc, null, 2));\"",
    "docs:serve": "npx swagger-ui-serve openapi.yaml"
  },
  "keywords": [
    "ai",
    "agent",
    "guidelines",
    "supabase",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "marked": "^12.0.0",
    "openai": "^4.28.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.1.4"
  }
}
